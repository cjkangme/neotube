extends ../base.pug

block content
    div#video-container
        video(src=`${video.url}`)
        div.controls-container
            span#play
                i.fas.fa-play
            span#mute
                i.fas.fa-volume-high
            div
                span#current-time 00:00
                span  / 
                span#total-time 00:00
            input(type="range" min="0" max="1" step="0.02" value="0.5")#volume
            div
                input(type="range" min="0" step="1" value="0")#timeline
            div
                span#fullscreen
                    i.fas.fa-expand
                span#loop
                    i.fas.fa-arrows-rotate
    //
        div
            p #{video.description}
            small #{video.createdAt}
        div
            small Uploaded By 
                a(href=`/users/${video.owner._id}`) #{video.owner.username}
        if String(video.owner._id) === String(loggedInUser._id)
            ul 
                li
                    a(href=`${video.id}/edit`) Edit Video &rarr;
                li
                    a(href=`${video.id}/delete`) Delete Video  &rarr;

block scripts
    script(src="/assets/js/videoPlayer.js")